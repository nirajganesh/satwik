<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/card_id"
        android:elevation="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:layout_margin="12dp"
        android:background="@drawable/card_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:id="@+id/relative_title_id"
                android:layout_marginStart="100dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:fontFamily="@font/rubik_medium"
                    android:id="@+id/name_id"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Dhokla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_below="@id/name_id"
                    android:fontFamily="@font/rubik_regular"
                    android:id="@+id/subtitle_id"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    android:text="6 pcs large size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                   <LinearLayout
                       android:layout_marginTop="10dp"
                       android:layout_below="@id/subtitle_id"
                       android:orientation="horizontal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       >
                       <ImageView
                           android:layout_marginTop="2dp"
                           android:background="@drawable/delete"
                           android:layout_width="10dp"
                           android:layout_height="10dp"
                           />
                       <TextView
                           android:textSize="12sp"
                           android:fontFamily="@font/rubik_regular"
                           android:layout_marginStart="5dp"
                           android:textColor="@color/blue_color"
                           android:text="Remove"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />

                   </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/relative_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/rubik_medium"
                    android:id="@+id/price_id"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="â‚¹444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                   android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/price_id"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageButton
                        android:src="@drawable/minus_solid_small"
                        android:background="@drawable/button_design"
                        android:id="@+id/add_button_id"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:minWidth="30dp"
                        android:minHeight="28dp"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_marginHorizontal="2dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_bold"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textColor="@color/main_text_color"
                        android:text="1"
                        android:id="@+id/textview_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ImageButton
                        android:src="@drawable/ic_baseline_add_24"
                        android:background="@drawable/button_design"
                        android:id="@+id/plus_id"
                        android:layout_width="wrap_content"
                        android:padding="2dp"
                        android:minWidth="10dp"
                        android:minHeight="15dp"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_relative_id"
        android:elevation="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dhokla"
            />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/offer_show_id"
        android:layout_marginStart="-40dp"
        android:background="@drawable/offer_circle_design"
        android:elevation="10dp"
        android:layout_width="40dp"
        android:padding="10dp"
        android:minHeight="40dp"
        android:layout_toRightOf="@id/image_relative_id"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/offer_text_id"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="10sp"
            android:fontFamily="@font/rubik_medium"
            android:text="10% off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>