<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/card_id"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/card_design"
        android:layout_width="200dp"
        android:minHeight="240dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/color_background_id"
            android:background="@drawable/seller_design"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

        <RelativeLayout
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/color_background_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:id="@+id/left_relative_id"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginTop="10dp"
                    android:id="@+id/name_id"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Paneer butter masala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/rubik_medium"
                    android:alpha="0.5"
                    android:layout_below="@id/name_id"
                    android:id="@+id/subtitle_id"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="Cutting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_toRightOf="@id/left_relative_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rupees_id"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="â‚¹444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>



            <Button
                android:layout_marginTop="10dp"
                android:layout_below="@id/left_relative_id"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_medium"
                android:text="ADD"
                android:background="@drawable/button_design"
                android:id="@+id/add_button_id"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/card_design"
        android:elevation="15dp">


        <ImageView
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tea"
            />

    </RelativeLayout>
</RelativeLayout>